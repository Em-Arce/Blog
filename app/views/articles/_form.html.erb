<%= form_with model: @article do |form| %>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class:"form-control text-muted" %>
    <% @article.errors.full_messages_for(:name).each do |message| %>
      <div class="text-warning"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class:"form-control text-muted", rows:"7"%>
    <% @article.errors.full_messages_for(:body).each do |message| %>
      <div class="text-warning"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :status %> <br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public', class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit class:'btn btn-sm btn-success' %>
  </div>
<% end %>
