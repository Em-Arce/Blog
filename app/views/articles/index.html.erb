<div class="p-2 text-center">
  <h1>Articles</h1>

  Our blog has <%= Article.public_count %> articles and counting!

</div>

<div class="p-2 text-center">
  <div>
    <ul class="p-2 list-unstyled">
    <% @articles.each do |article| %>
      <li>
        <%= link_to article.name %>
        <p class="btn-group btn-group-sm">
          <%= link_to 'Show', article, class:'btn btn-info'%>
          <%= link_to 'Edit', edit_article_path(article), class:'btn btn-info'%>
          <%= link_to 'Delete', article, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      </li>
    <% end %>
  </ul>
  </div>

  <div class="p-2">
    <%= link_to "New Article", new_article_path, class:'btn btn-sm btn-info'%>
  </div>

</div>
